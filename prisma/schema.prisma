generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  preferredChain  String    @default("BASE-SEPOLIA")
  onboardingCompleted Boolean @default(false)
  accounts        Account[]
  sessions        Session[]
  wallets         Wallet[]
  transactions    Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Wallet {
  id             String @id @default(cuid())
  userId         String
  blockchain     String // ARC-TESTNET | BASE-SEPOLIA
  circleWalletId String @unique
  address        String
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, blockchain])
}

model Transaction {
  id             String   @id @default(cuid())
  senderId       String
  recipientEmail String
  amount         String // Store as string to handle decimals safely or use Decimal
  status         String   @default("PENDING") // PENDING, COMPLETED, FAILED
  transferType    String   @default("SAME_CHAIN") // SAME_CHAIN | CROSS_CHAIN
  sourceChain     String?
  destChain       String?
  depositTxHash   String?
  withdrawTxHash  String?
  txHash         String?
  createdAt      DateTime @default(now())
  
  sender         User     @relation(fields: [senderId], references: [id])
}
